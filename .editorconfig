root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
insert_final_newline = unset

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{ml,mli,mll,mly}]
indent_size = 2
